# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

ENV["FL_XCODE_VERSION"] = "14.1.0"

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    xcversion
    increment_build_number(xcodeproj: "App/Construct.xcodeproj")
    build_app(project: "App/Construct.xcodeproj", scheme: "Construct", include_bitcode: false)
    upload_to_testflight
  end

  lane :appstore do
    xcversion
    
    increment_build_number(xcodeproj: "App/Construct.xcodeproj")
    build_app(project: "App/Construct.xcodeproj", scheme: "Construct", include_bitcode: false, clean: true)

    prepare_app_store_screenshots

    upload_to_app_store(
      skip_screenshots: false,
      skip_metadata: true
    )
  end

  lane :update_appcenter_dsyms do
    download_dsyms(version: "latest")

    lane_context[SharedValues::DSYM_PATHS].each do |dsym|
      appcenter_upload(
        owner_name: "thomas-visser-00ws",
        owner_type: "user", # Default is user - set to organization for appcenter organizations
        app_name: "Construct",
        dsym: dsym,
        upload_dsym_only: true
      )
    end
  end

  desc "Prepares the screenshots generated by the AppStoreScreenshotTests unit test case to be uploaded to the App Store"
  lane :prepare_app_store_screenshots do
    `rm screenshots/en-US/*`
    `for s in ../App/UnitTests/__Snapshots__/AppStoreScreenshotTests/*iPadPro129_3rd_gen.png; do sips -s format png "${s}" -Z 2732 --out "screenshots/en-US/ipadPro129_${s##*/}"; done`
    `for s in ../App/UnitTests/__Snapshots__/AppStoreScreenshotTests/*iPadPro129_4th_gen.png; do sips -s format png "${s}" -Z 2732 --out "screenshots/en-US/${s##*/}"; done`
    `for s in ../App/UnitTests/__Snapshots__/AppStoreScreenshotTests/*iPhone*.png; do cp "${s}" screenshots/en-US/; done`
  end

  lane :upload_app_store_screenshots do
    prepare_app_store_screenshots

    upload_to_app_store(
      skip_screenshots: false,
      skip_metadata: true,
      skip_binary_upload: true
    )
  end
end
